<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovecoinApp.Views.ChallengeView"
             Title="Challenge Details">

    <StackLayout Padding="10">
        <Label Text="{Binding Challenge.Name}" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

        <Label Text="Metrics" 
               FontSize="18" 
               FontAttributes="Bold" 
               Margin="0,10,0,0" />

        <StackLayout Orientation="Vertical">
            <Label Text="Steps: {Binding Challenge.Metrics.Steps}" />
            <Label Text="Floors: {Binding Challenge.Metrics.Floors}" />
            <Label Text="Intensity Minutes: {Binding Challenge.Metrics.IntensityMinutes}" />
        </StackLayout>

        <Label Text="Scores" 
               FontSize="18" 
               FontAttributes="Bold" 
               Margin="0,10,0,0" />

        <Label Text="{Binding Challenge.Scores}" />

        <Label Text="Stakes" 
               FontSize="18" 
               FontAttributes="Bold" 
               Margin="0,10,0,0" />

        <Label Text="{Binding Challenge.Stakes}" />

        <Label Text="Rewards" 
               FontSize="18" 
               FontAttributes="Bold" 
               Margin="0,10,0,0" />

        <Label Text="{Binding Challenge.Rewards}" />

        <Label Text="Duration" 
               FontSize="18" 
               FontAttributes="Bold" 
               Margin="0,10,0,0" />

        <Label Text="{Binding Challenge.Duration}" />

        <Button Text="Join Challenge" 
                Command="{Binding JoinChallengeCommand}" 
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
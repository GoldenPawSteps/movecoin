<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovecoinApp.Views.DashboardView"
             Title="Dashboard">

    <StackLayout Padding="10">
        <Label Text="Welcome to the Movecoin Challenge Dashboard"
               FontSize="24"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding UserChallenges}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Label Text="{Binding Duration}" FontSize="14" />
                            <Label Text="{Binding Scores}" FontSize="14" />
                            <Button Text="Join Challenge" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.JoinChallengeCommand}" CommandParameter="{Binding}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Create New Challenge" Command="{Binding CreateChallengeCommand}" />
    </StackLayout>
</ContentPage>